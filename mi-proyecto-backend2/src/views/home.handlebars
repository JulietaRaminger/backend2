{{header}}
<div>
    <h3>Lista de productos</h3>

    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>description</th>
                <th>price</th>
                <th>Imagen</th>
                <th>code</th>
                <th>stock</th>
                <th>status</th>
                <th>category</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>
                    {{#if this.thumbnail}}
                    <a href="{{this.thumbnail}}" target="_blank">
                        <img src="{{this.thumbnail}}" alt="img" /></a>
                    {{else}}
                    No hay imagen
                    {{/if}}
                </td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.status}}</td>
                <td>{{this.category}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>